<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/uselessDay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/uselessTaskCount"
        android:text="adsasdadasd"
        android:textColor="@color/colorAutumnGray"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/uselessMonth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/uselessDay"
        app:layout_constraintRight_toLeftOf="@id/uselessTaskCount"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="adasdasd"
        android:textColor="@color/colorAutumnGray"
        android:gravity="center" />

    <TextView
        android:id="@+id/uselessTaskCount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/uselessDay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/uselessDay"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/colorAutumnGray"
        android:gravity="center|end"
        android:text="dasdasdasdad"
        android:visibility="gone"
        android:layout_marginHorizontal="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorBlack40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/uselessMonth"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>